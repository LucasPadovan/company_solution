<table class="table table-striped table-hover mar-bottom-3">
  <thead>
    <tr>
      <th><%= Product.human_attribute_name :name %></th>
      <th><%= Product.human_attribute_name :internal_name %></th>
      <th><%= Product.human_attribute_name :internal_code %></th>
      <th><%= Product.human_attribute_name :external_code %></th>
      <th><%= Product.human_attribute_name :area %></th>
      <th><%= Product.human_attribute_name :type %></th>
      <th><%= Product.human_attribute_name :initial_stock %></th>
      <th><%= Product.human_attribute_name :current_stock %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.internal_name %></td>
        <td><%= product.internal_code %></td>
        <td><%= product.external_code %></td>
        <td><%= product.area %></td>
        <td><%= product.type_to_show %></td>
        <td><%= product.initial_stock_with_unit %></td>
        <td><%= product.current_stock_with_unit %></td>
        <td>
          <%= link_to '', product_path(product), class: 'fa fa-2x fa-info-circle' %>
          <%= link_to '', edit_product_path(product), class: 'fa fa-2x fa-pencil-square' %>
          <%= link_to '', product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'fa fa-2x fa-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('view.products.new_title'), new_product_path, class: 'btn btn-primary' %>
