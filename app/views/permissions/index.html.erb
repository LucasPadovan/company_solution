<table class="table table-striped table-hover mar-bottom-3">
  <thead>
    <tr>
      <th><%= Permission.human_attribute_name 'from_date' %></th>
      <th><%= Permission.human_attribute_name 'to_date' %></th>
      <th><%= Permission.human_attribute_name 'certificate' %></th>
      <th><%= Permission.human_attribute_name 'firm' %></th>
      <th><%= Permission.human_attribute_name 'contact' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.from_date %></td>
        <td><%= permission.to_date %></td>
        <td><%= permission.certificate %></td>
        <td><%= permission.firm %></td>
        <td><%= permission.contact %></td>
        <td>
          <%= link_to '', permission, class: 'fa fa-2x fa-info-circle'  %>
          <%= link_to '', edit_permission_path(permission), class: 'fa fa-2x fa-pencil-square' %>
          <%= link_to '', permission, method: :delete, data: { confirm: t('messages.confirmation') }, class: 'fa fa-2x fa-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('view.permissions.new_title'), new_permission_path, class: 'btn btn-primary'  %>
