<table class="table table-striped table-hover mar-bottom-3">
  <thead>
    <tr>
      <% if @certificate && !no_firm %>
        <th><%= Permission.human_attribute_name 'firm' %></th>
      <% elsif !no_firm %>
        <th><%= Permission.human_attribute_name 'certificate' %></th>
      <% end %>
      <th><%= Permission.human_attribute_name 'from_date' %></th>
      <th><%= Permission.human_attribute_name 'to_date' %></th>
      <th><%= Permission.human_attribute_name 'state' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'permissions/permission', collection: permissions, locals: { parent: parent, no_firm: no_firm } %>
  </tbody>
</table>

<%= link_to t('view.permissions.new_title'), ['new', parent, 'permission', no_firm: no_firm], class: 'btn btn-primary'  %>

<% unless params[:controller] === 'permissions' %>
  <%= link_to t('label.show_historic'), [parent, 'permissions', no_firm: no_firm], class: 'btn btn-sm'  %>
<% end %>
