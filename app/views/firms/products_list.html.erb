<%= render 'shared/basic_navigation', navigation: {
    back: firm_path(@firm)
} %>

<section>
  <table class="table table-striped table-hover mar-bottom-3">
    <thead>
    <tr>
      <th><%= Trade.human_attribute_name :product_id %></th>
      <th><%= t('view.trades.price_without_taxes') %></th>
      <th><%= t('view.trades.price_with_taxes') %></th>
    </tr>
    </thead>

    <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.product.name %></td>
        <td>$<%= trade.available_price.try(:price) %></td>
        <td>$<%= trade.price_with_taxes %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>
