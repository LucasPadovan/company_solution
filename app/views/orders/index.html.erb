<%= render 'orders/index_filter' %>

<table class="table table-striped table-hover mar-bottom-3">
  <thead>
  <tr>
      <th><%= Order.human_attribute_name 'firm' %></th>
      <th><%= Order.human_attribute_name 'number' %></th>
      <th><%= Order.human_attribute_name 'date' %></th>
      <th><%= Order.human_attribute_name 'taxes' %></th>
      <th><%= Order.human_attribute_name 'subtotal' %></th>
      <th><%= Order.human_attribute_name 'total' %></th>
      <th><%= Order.human_attribute_name 'contact_name' %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.firm.name %></td>
        <td><%= order.number %></td>
        <td><%= order.formatted_date %></td>
        <td><%= order.taxes %></td>
        <td><%= order.subtotal %></td>
        <td><%= order.total %></td>
        <td><%= order.contact_name %></td>
        <td>
          <%= link_to '', order, class: 'fa fa-2x fa-info-circle'  %>
          <%= link_to '', edit_order_path(order), class: 'fa fa-2x fa-pencil-square' %>
          <%= link_to '', order, method: :delete, data: { confirm: t('messages.confirmation') }, class: 'fa fa-2x fa-trash' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('view.orders.new_title'), new_order_path, class: 'btn btn-primary'  %>
