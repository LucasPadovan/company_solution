    <%= form.label :area, class: 'from-label' %>
    <%= form.text_field :area, id: :contact_area, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :details, class: 'from-label' %>
    <%= form.text_area :details, id: :contact_details, class: 'form-input' %>
  </div>

