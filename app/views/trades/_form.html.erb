<%= form_with(model: trade, local: true) do |form| %>
  <% if trade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(trade.errors.count, 'error') %> prohibited this trade from being saved:</h2>

      <ul>
      <% trade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :product_id, class: 'from-label' %>
    <%= form.text_field :product_id, id: :trade_product_id, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :sold_by, class: 'from-label' %>
    <%= form.text_field :sold_by, id: :trade_sold_by, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :sold_to, class: 'from-label' %>
    <%= form.text_field :sold_to, id: :trade_sold_to, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :from, class: 'from-label' %>
    <%= form.datetime_select :from, id: :trade_from, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :to, class: 'from-label' %>
    <%= form.datetime_select :to, id: :trade_to, class: 'form-input' %>
  </div>

  <div class="actions">
    <%= form.submit t('view.trades.save'), class: 'btn btn-primary'  %>
  </div>
<% end %>
