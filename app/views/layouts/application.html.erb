<!doctype html>
<html>
  <head>
    <title>Company Solution</title>
    <title><%#= title %></title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%#= render 'shared/menu' %>

    <section class="section">
      <section class="grid-header container grid-960">
        <nav class="navbar">
          <section class="navbar-section">
            <a href="#" class="navbar-brand mr-10"><%= @title %></a>
            <a href="#" class="btn btn-link">Docs</a>
            <a href="https://github.com/picturepan2/spectre" class="btn btn-link">GitHub</a>
          </section>
          <section class="navbar-section">
            <div class="input-group input-inline">
              <input class="form-input" type="text" placeholder="search" />
              <button class="btn btn-primary input-group-btn">Search</button>
            </div>
          </section>
        </nav>
      </section>
    </section>

    <div class="container">
      <!--<% if @title %>-->
        <!--<div class="section-title">-->
          <!--<h1><%= @title %></h1>-->
        <!--</div>-->
      <!--<% end %>-->
      <div class="columns">
        <div class="column col-12">
          <%= yield %>
        </div>
      </div>
    </div>

    <div id="modal" class="fade"></div>

    <%#= render 'shared/notice' if flash.notice %>
    <%#= render 'shared/alert' if flash.alert %>
  </body>
</html>
