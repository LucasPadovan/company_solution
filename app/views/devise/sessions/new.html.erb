<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'from-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'from-label' %>
    <%= f.password_field :password, autocomplete: 'off', class: 'form-input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.label :remember_me, class: 'form-switch' do %>
        <%= f.check_box :remember_me %>
        <i class="form-icon"></i> Remember me
      <% end %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit 'Log in', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
